{
  "manifest_version": 3,
  "name": "My X Customizer",
  "version": "0.1.0",
  "description": "Twitterの表示をカスタマイズする拡張機能です。",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}